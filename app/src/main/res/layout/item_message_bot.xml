<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingEnd="64dp"
    android:paddingBottom="4dp">

    <!-- TextView cho câu trả lời chính -->
    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:background="@drawable/background_bot_message"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        android:text="This is a sample bot response which is typically longer and provides detailed information."
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <!-- THÊM MỚI: TextView để hiển thị các nguồn -->
    <TextView
        android:id="@+id/textViewSources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="12dp"
        android:text="Sources: ..."
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        android:visibility="gone" /> <!-- Ban đầu sẽ ẩn đi -->

</LinearLayout>